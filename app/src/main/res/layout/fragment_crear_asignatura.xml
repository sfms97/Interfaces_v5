<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintAadirAsignatu"
        style="@style/groupStylegray_300_e5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/asignaturaAAsignatura"
            android:layout_width="312dp"
            android:layout_height="53dp"
            android:ems="10"
            android:hint="Introduce el nombre de la asignatura"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="@+id/txtNombreDeLaAs"
            app:layout_constraintEnd_toEndOf="@+id/txtNombreDeLaAs"
            app:layout_constraintStart_toStartOf="@+id/txtNombreDeLaAs"
            app:layout_constraintTop_toTopOf="@+id/txtNombreDeLaAs" />

        <TextView
            android:id="@+id/txtNombreDeLaAs"
            style="@style/txtSansitaSwashedromanregular18_1"
            android:layout_width="322dp"
            android:layout_height="67dp"
            android:layout_marginStart="@dimen/_69pxh"
            android:layout_marginTop="@dimen/_12pxv"
            android:layout_marginEnd="@dimen/_68pxh"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            app:layout_constraintBottom_toTopOf="@+id/btnGuardar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintGroup351" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintGroup351"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12pxv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imagePngkey5"
                android:layout_width="@dimen/_42pxh"
                android:layout_height="@dimen/_45pxh"
                android:layout_marginStart="@dimen/_193pxh"
                android:layout_marginEnd="@dimen/_20pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_pngkey5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.75"
                app:layout_constraintStart_toEndOf="@+id/imageInterfaceFavor"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageInterfaceFavor"
                android:layout_width="@dimen/_40pxh"
                android:layout_height="@dimen/_36pxh"
                android:layout_marginStart="@dimen/_30pxh"
                android:layout_marginBottom="@dimen/_9pxv"
                android:scaleType="fitXY"
                android:src="@drawable/img_interfacefavor_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imagePngkey5"
                app:layout_constraintHorizontal_bias="0.09"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btnGuardar"
            style="@style/txtSolidRounded"
            android:background="@drawable/rectangle_bg_amber_700_radius_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="384dp"
            android:text="Guardar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
